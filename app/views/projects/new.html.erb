<div class="row margin-top-row">
  <div class="container">
    <div class="col-md-offset-3 col-md-6">
      <%= simple_form_for @project, :html=> {class: 'form-horizontal'} do |f| %>
      <%= f.input :title %>
      <%= f.input :short_description %>
      <%= f.input :description %>
      <%= f.input :image_url %>
      <%= f.input :goal %>
      <%= f.input :ends_on %>
      <%= f.button :submit, input_html: { class: 'btn btn-primary' } %>
      <% end %>
    </div>
  </div>
</div>
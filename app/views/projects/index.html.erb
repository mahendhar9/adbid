<div class="row margin-top-row projects-row">
  <div class="container">
    <% if @projects.any? %>
    <% @projects.each do |project| %>
    <div class="col-md-4">
      <div class="project-box">
        <%= image_tag(project.image_url, class: "img-responsive") %>
        <div class="project-title-button">
          <%= link_to project_path(project) do %>
            <h3> <%= project.title %> </h3>
          <% end %>
          <%= link_to "DONATE", '#', class: "donate-btn btn btn-success btn-sm pull-right" %>
        </div>
        <p><%= project.short_description %></p>
        <hr>
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar"
          aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:<%= (project.amount_raised)/(project.goal) * 100 %>%">
          <%= ((project.amount_raised)/(project.goal.to_i) * 100).to_i %>%
        </div>
      </div>
      <div class="col-md-offset-2 col-md-10">
      <%= fa_icon "inr", text: project.amount_raised %><span class="raised">raised of</span> <%= fa_icon "inr", text: project.goal.to_i %>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
</div>